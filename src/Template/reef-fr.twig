{% extends "base.twig" %}
{% block body %}

    <div class="certif-wrapper certif-reef">

        <img class="certif-stamp" src='data:image/png;base64,{{ stampImg }}' alt="Certificat d'adoption"/>

        <div class="certif-content">
            <header class="less-margin">
                <h1>Certificat d'adoption</h1>
                <hr>
                <span>d'un récif contribuant au programme de restauration du récif d’Hatamin<br>en Indonésie</span>
            </header>

            <div class="content-pics">

                <div class="pic-corail">
                    <img src="data:image/png;base64,{{ productImg }}" alt="Récif adopté"/>
                </div>

                <div class="pic-transplanteur">
                    <img src="data:image/png;base64,{{ teamImg }}" alt="Transplanteur"/>
                    <strong class="text-uppercase">Transplanté par :</strong><br>
                    <span class="typo-courrier font-size-lower">L'équipe Coral<br>Guardian</span>
                </div>

            </div>

            <div class="content-infos">
                <span class="infos-title">{{ data.adopteeName }}</span>
                <span class="infos">
					<span class="text-uppercase">Date : </span><span class="typo-courrier">{{ data.date }}</span><br>
                <span class="text-uppercase">Coordonnées GPS : </span><span class="typo-courrier letter-spacing-unset">8°24’05.14’’S - 119°52’37.28’’E</span>
				</span>
            </div>

            <hr class="bottom-hr">

            <a class="certif-website" href="https://www.coralguardian.org/">coralguardian.org</a>
        </div>

        <img class="logo" src="data:image/png;base64,{{ logoImg }}" alt="Coral Guardian"/>

    </div>
{% endblock %}