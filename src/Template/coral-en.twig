{% extends "base.twig" %}

{% block title %}Certificate of adoption{% endblock %}

{% block body %}

    <div class="certif-wrapper">

        <img class="certif-stamp" src="data:image/png;base64,{{ stampImg }}" alt="Certificat d'adoption"/>

        <div class="certif-content">
            <header class="less-margin">
                <h1>Certificate of adoption</h1>
                <hr>
                <span>
                of a coral contributing to Hatamin<br>island’s restoration program<br>in Indonesia
            </span>
            </header>

            <div class="content-pics">

                <div class="pic-corail">
                    <img src="data:image/png;base64,{{ productImg }}" alt="Corail adopté"/>
                </div>

                <div class="pic-transplanteur">
                    <img src="data:image/png;base64,{{ transplantImg }}" alt="Transplanteur"/>
                    <strong class="text-uppercase">Transplanted by:</strong><br>
                    <span class="typo-courrier">{{ data.seeder }}</span>
                </div>

            </div>

            <div class="content-infos">
                <span class="infos-title">{{ data.adopteeName }}</span>
                <span class="infos">
                <span class="text-uppercase">Species: </span><em class="typo-courrier">Acropora sp</em><br>
					<span class="text-uppercase">Date: </span><span class="typo-courrier">{{ data.date }}</span><br>
					<span class="text-uppercase">GPS Coordinates: </span><span class="typo-courrier letter-spacing-unset">8°24’05.14’’S - 119°52’37.28’’E</span>
				</span>
            </div>

            <hr class="bottom-hr">

            <a class="certif-website" href="https://www.coralguardian.org/">coralguardian.org</a>
        </div>

        <img class="logo" src="data:image/png;base64,{{ logoImg }}" alt="Coral Guardian"/>

    </div>
{% endblock %}